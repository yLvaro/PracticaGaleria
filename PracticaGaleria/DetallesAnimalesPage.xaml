<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaGaleria.DetallesAnimalesPage"
             Title="Detalles">
    <VerticalStackLayout>
        <VerticalStackLayout
        Spacing="20"
        Padding="20">

            <Image
            x:Name="AnimalImagen"
            HeightRequest="200"
            HorizontalOptions="Center" />

            <Label
            x:Name="NombreAnimalLabel"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

            <Label
            x:Name="DescripcionAnimalLabel"
            FontSize="16"
            HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>